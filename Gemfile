source "https://rubygems.org"

gem "jekyll"

# GitHub Pages gem
gem "github-pages", group: :jekyll_plugins

# Add Jekyll plugins
group :jekyll_plugins do
  # gem "jekyll-default-layout"           # Sets default layouts for pages/posts
  gem "jekyll-feed"                     # Generates Atom feed for posts
  # gem "jekyll-optional-front-matter"    # Allows optional front matter for files
  # gem "jekyll-paginate"                 # Adds pagination support for posts
  # gem "jekyll-readme-index"             # Uses README.md as index for directories
  # gem "jekyll-redirect-from"            # Redirects old URLs to new ones
  # gem "jekyll-relative-links"           # Adjusts relative links for Markdown
  gem "jekyll-seo-tag"                  # Adds SEO metadata to your site
  # gem "jekyll-sitemap"                  # Generates a sitemap for search engines
  # gem "jekyll-titles-from-headings"     # Automatically sets page titles from headings
  # gem "jekyll-include-cache"            # Caches include content for performance
  # gem "jekyll-last-modified-at"         # Displays the last modified date for pages
  gem "jekyll-remote-theme"             # Enables the use of remote themes
  gem "jekyll-avatar"                   # Displays avatars for authors
end

gem "faraday-retry"                    # Retries failed requests with Faraday